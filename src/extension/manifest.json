{
    "manifest_version": 2,
    "name": "Linx",
    "description": "Save a bookmark to Linx.",
    "version": "0.4",
    "options_page": "options.html",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ]
}
